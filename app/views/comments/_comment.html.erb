<div class="comment">
  <p class="comment-content"><%= comment.content %></p>
  <p class="comment-posted-by">By <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %> ago</p>
  <div class="links">
    <% if user_signed_in? %>
      <% if current_user.id == comment.user_id %>
        <%= link_to 'Edit', edit_forum_comment_path(comment.forum, comment) %>
        <%= link_to 'Delete', forum_comment_path(comment.forum, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  </div>
</div>