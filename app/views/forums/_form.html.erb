<%= form_for(forum) do |f| %>
<div class="container">
  <% if forum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(forum.errors.count, "error") %> prohibited this forum from being saved:</h2>

      <ul>
      <% forum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :topic, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :topic %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :question, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_area :question, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
